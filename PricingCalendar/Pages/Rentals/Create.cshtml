@page
@model PricingCalendar.Pages.Rentals.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rental</h4>
<p>This rental will automatically detect which calendar dates and prices apply.</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Rental.StartAt" class="control-label"></label>
                <input asp-for="Rental.StartAt" class="form-control" />
                <span asp-validation-for="Rental.StartAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rental.EndAt" class="control-label"></label>
                <input asp-for="Rental.EndAt" class="form-control" />
                <span asp-validation-for="Rental.EndAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
